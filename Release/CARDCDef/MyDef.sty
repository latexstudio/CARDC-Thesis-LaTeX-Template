\newcommand{\piandao}[3][1]{
    \ifthenelse{\equal{#1}{1}}{ %
        \frac{\partial #2}{\partial #3}
    }{
        \frac{\partial^{#1} #2}{\partial #3}
    }
}

\newcommand{\opd}{\mathrm{d}}
\newcommand{\opD}{\mathrm{D}}

\newcommand{\daoshu}[3][1]{
    \ifthenelse{\equal{#1}{1}}{ %
        \frac{\opd #2}{\opd #3}
    }{
        \frac{\opd^{#1} #2}{\opd #3}
    }
}

\newcommand{\Daoshu}[3][1]{
    \ifthenelse{\equal{#1}{1}}{ %
        \frac{\opD #2}{\opD #3}
    }{
        \frac{\opD^{#1} #2}{\opD #3}
    }
}

